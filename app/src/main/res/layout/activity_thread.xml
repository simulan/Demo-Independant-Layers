<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android">
            <RelativeLayout
                android:id="@+id/bannerContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/toolbarImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:fitsSystemWindows="true"
                    android:contentDescription="banner"
                    android:src="@drawable/androidbanner"
                    />
                <TextView
                    android:padding="15dp"
                    android:id="@+id/txtvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/toolbarImage"
                    android:layout_alignTop="@id/toolbarImage"
                    android:layout_alignRight="@id/toolbarImage"
                    android:gravity="start|center"
                    android:text="How many projects on freelance sites like upwork are done in a 'proper' way(mvp, rxjava, retrofit etc.)? "
                    style="@style/BannerTitle"
                    />
                <TextView
                    android:id="@+id/txtvReference"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_alignStart="@id/toolbarImage"
                    android:layout_alignBottom="@id/toolbarImage"
                    android:gravity="end|center"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="Twitter"
                    style="@style/BannerSubTitle"
                    />
                <TextView
                    android:id="@+id/txtvAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_alignEnd="@id/toolbarImage"
                    android:layout_alignBottom="@id/toolbarImage"
                    android:gravity="end|center"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="Uncharted"
                    style="@style/BannerSubTitle"
                    />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/statsContainer"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="5 votes"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="1.3K comments"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="A moment ago"
                        android:gravity="center"
                    />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
